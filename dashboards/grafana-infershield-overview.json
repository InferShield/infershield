{
  "dashboard": {
    "title": "InferShield Overview",
    "tags": ["infershield", "overview"],
    "timezone": "utc",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{ method }} {{ route }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m])",
            "legendFormat": "{{ method }} {{ route }} - {{ status_code }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Request Duration (p50, p95, p99)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ]
      },
      {
        "id": 4,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m])",
            "legendFormat": "{{ kubernetes_pod_name }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1073741824",
            "legendFormat": "{{ kubernetes_pod_name }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Pod Count",
        "type": "stat",
        "gridPos": { "x": 12, "y": 16, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "count(up{job=\"infershield-backend\"})",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Reports Generated (Total)",
        "type": "stat",
        "gridPos": { "x": 18, "y": 16, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(reports_generated_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Report Generation Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(reports_generated_total[5m])",
            "legendFormat": "{{ framework }} {{ format }} - {{ status }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Report Generation Duration (p95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(report_generation_duration_seconds_bucket[10m]))",
            "legendFormat": "{{ framework }} {{ format }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Policy Violations Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(policy_violations_total[5m])",
            "legendFormat": "{{ policy_type }} - {{ severity }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": { "x": 12, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m]) / (rate(cache_hits_total[5m]) + rate(cache_misses_total[5m]))",
            "legendFormat": "{{ cache_type }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 12,
        "title": "Active Database Connections",
        "type": "graph",
        "gridPos": { "x": 0, "y": 40, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "active_connections{type=\"database\"}",
            "legendFormat": "Database connections",
            "refId": "A"
          }
        ]
      },
      {
        "id": 13,
        "title": "Database Query Duration (p95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 40, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{ query_type }}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
